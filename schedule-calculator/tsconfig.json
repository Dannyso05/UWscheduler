{
    "compilerOptions": {
        "target": "es6",
        "module": "commonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true
    },
    "include": ["src"]
}
